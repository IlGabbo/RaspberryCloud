import pygame
import tkinter as tk
from tkinter import *
import tkinter.font, random, re
import pybricks
from pybricks import *
from pygame import color
from pybricks.pupdevices import DCMotor, Motor
from pybricks.parameters import Direction, Port
from pybricks.tools import wait
from pybricks.robotics import DriveBase

direction=Direction
guida=DriveBase(left_motor=Motor, right_motor=Motor, wheel_diameter=None, axle_track=None)
program=tk.Tk()
program.geometry("600x600")
program.title("Commdand-Line")

def command(event=None):
    pygame.mixer.init()
    pygame.mixer.music.load("test.mp3")
    pygame.mixer.music.play()
    pygame.event.wait()

def alt(event=None):
    pygame.mixer.music.stop()

def attiva(event=None):
    guida.drive(speed=100, turn_rate=None)
    print("Motore acceso")

def stopped_motor(event=None):
    guida.stop()
    print("Motore fermo")

def clock_rotate(event=None):
    direction.CLOCKWISE()
    print("->")


def noclock_rotate(event=None):
    direction.COUNTERCLOCKWISE()
    print("<-")    


program.bind('<a>', command)
program.bind('<s>', alt)
program.bind('<1>', attiva)
program.bind('<2>', stopped_motor)
program.bind('<3>', clock_rotate)
program.bind('<4>', noclock_rotate)

button=tk.Button(command=command, width=13)
button.grid(row=0, column=0)

buttonStop=tk.Button(command=alt, width=13)
buttonStop.grid(row=1, column=0, pady=20)

buttonAttiva=tk.Button(command=attiva, width=13, text="Avvia il motore")
buttonAttiva.grid(row=2, column=0)

buttonStopped=tk.Button(command=stopped_motor, width=13, text="Ferma il motore")
buttonStopped.grid(row=3, column=0)

clockRotate=tk.Button(command=clock_rotate, width=13, text="Destra")
clockRotate.grid(row=4, column=0)

clock_noRotate=tk.Button(command=noclock_rotate, width=13, text="Sinistra")
clock_noRotate.grid(row=5, column=0)

program.mainloop()